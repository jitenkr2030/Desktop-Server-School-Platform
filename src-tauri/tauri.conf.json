{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "INR99 Academy",
  "version": "1.0.0",
  "identifier": "com.inr99.academy",
  "build": {
    "frontendDist": ".next/standalone",
    "devUrl": "http://localhost:3000"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "INR99 Academy - School Platform",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": false,
        "visible": true
      }
    ],
    "security": {
      "csp": null,
      "defaultPolicy": "allow-same-origin",
      "capitalizeHtmlWords": true,
      "dangerousDisableAssetCspModify": false
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "INR99",
    "deb": {
      "depends": []
    },
    "macOS": {
      "entitlements": null,
      "providerShortName": null,
      "signingIdentity": null,
      "hardenedRuntime": true
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "fs": {
      "all": true
    },
    "dialog": {
      "all": true
    },
    "notification": {
      "all": true
    }
  }
}
